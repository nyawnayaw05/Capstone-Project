<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.result.ResultActivity">

    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_image_24" />

    <ScrollView
        android:id="@+id/scroll_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/resultImageView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tittle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Sakit"
                android:textColor="@color/light_green"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fill_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_dummy"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Penyebab"
                android:textColor="@color/darker_green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fill_causes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_dummy"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pencegahan"
                android:textColor="@color/darker_green"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fill_prevention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_dummy"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rekomendasi Perawatan"
                android:textColor="@color/darker_green"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fill_treatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_dummy"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>